<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_loc_dialog"
    android:orientation="vertical"
    android:paddingVertical="34dp"
    android:layout_marginHorizontal="20dp"
    android:paddingHorizontal="30dp">
    <TextView
        android:id="@+id/tieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="Bộ lọc"
        android:textColor="@color/c_374D6B"
        android:textSize="32dp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxStrokeWidth="0dp"
        android:scrollIndicators="none"
        android:background="@drawable/bg_dropdown"
        app:endIconDrawable="@drawable/ic_round_arrow_drop_down"
        android:paddingBottom="6dp"
        android:hint="Khoa"
        android:overScrollMode="never"
        >
        <AutoCompleteTextView
            android:id="@+id/nganhSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:background="#F4F6FC"
            android:inputType="none"
            android:textColor="@color/c_374D6B"
            android:fontFamily="@font/bold"
            android:overScrollMode="never"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxStrokeWidth="0dp"
        android:scrollIndicators="none"
        android:background="@drawable/bg_dropdown"
        app:endIconDrawable="@drawable/ic_round_arrow_drop_down"
        android:paddingBottom="6dp"
        android:hint="Lớp"
        android:overScrollMode="never"
        >
        <AutoCompleteTextView
            android:id="@+id/lopSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:background="#F4F6FC"
            android:inputType="none"
            android:textColor="@color/c_374D6B"
            android:fontFamily="@font/bold"
            android:overScrollMode="never"
            />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>