<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemSua">


    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:fillViewport="true"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_round_back"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/back"
            />
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/anhnguoidung"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin chung"
                android:fontFamily="@font/bold"
                android:textSize="23dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:textColor="#374D6B"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã Sinh Viên"
                    android:fontFamily="@font/semibold"
                    android:textSize="15dp"
                    android:textColor="#777E88"
                    />
                <EditText
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:hint="    Mã Sinh Viên"
                    android:background="@drawable/shape_thongtin"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ Tên"
                    android:fontFamily="@font/semibold"
                    android:textSize="15dp"
                    android:textColor="#777E88"
                    />
                <EditText
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:hint="    Họ Tên"
                    android:background="@drawable/shape_thongtin"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới Tính"
                    android:fontFamily="@font/semibold"
                    android:textSize="15dp"
                    android:textColor="#777E88"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:textColor="#374D6B"
                    android:textSize="17dp"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nữ"
                        android:textColor="#374D6B"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày Sinh"
                    android:fontFamily="@font/semibold"
                    android:textSize="15dp"
                    android:textColor="#777E88"
                    />
                <EditText

                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:hint="    Chọn Ngày"
                    android:id="@+id/date_picker_actions"
                    android:background="@drawable/shape_thongtin"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số CCCD"
                    android:fontFamily="@font/semibold"
                    android:textSize="15dp"
                    android:textColor="#777E88"
                    />
                <EditText
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:hint="    Số CCCD"
                    android:background="@drawable/shape_thongtin"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khoa"
                    android:fontFamily="@font/semibold"
                    android:textSize="15dp"
                    android:textColor="#777E88"
                    />
                <Spinner
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_thongtin"
                    android:id="@+id/spinnerkhoa"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngành"
                    android:fontFamily="@font/semibold"
                    android:textSize="15dp"
                    android:textColor="#777E88"
                    />
                <Spinner
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_thongtin"
                    android:id="@+id/spinnernganh"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lớp"
                    android:fontFamily="@font/semibold"
                    android:textSize="15dp"
                    android:textColor="#777E88"
                    />
                <Spinner
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_thongtin"
                    android:id="@+id/spinnerlop"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin liên lạc"
                android:fontFamily="@font/bold"
                android:textSize="23dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#374D6B"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Điện Thoại"
                    android:fontFamily="@font/semibold"
                    android:textSize="15dp"
                    android:textColor="#777E88"
                    />
                <EditText
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:hint="    Số Điện Thoại"
                    android:background="@drawable/shape_thongtin"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:fontFamily="@font/semibold"
                    android:textSize="15dp"
                    android:textColor="#777E88"
                    />
                <EditText
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:hint="    Email"
                    android:background="@drawable/shape_thongtin"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa Chỉ"
                    android:fontFamily="@font/semibold"
                    android:textSize="15dp"
                    android:textColor="#777E88"
                    />
                <EditText
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:hint="    Địa Chỉ"
                    android:background="@drawable/shape_thongtin"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="220dp"
                android:text="Lưu"
                android:fontFamily="@font/bold"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/shape_buton_luu"
                /></LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>