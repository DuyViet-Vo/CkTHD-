<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_loc_dialog"
    android:paddingVertical="24dp"
    android:layout_marginHorizontal="20dp"
    android:paddingHorizontal="30dp">
    <TextView
        android:id="@+id/noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:textSize="18sp"
        android:textColor="@color/c_374D6B"
        android:text="Bạn có chắc muốn xóa không?"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noti"
        app:cardCornerRadius="8dp"
        android:layout_toStartOf="@+id/card_end"
        android:layout_marginTop="14dp"
        app:cardElevation="0dp"
        android:layout_marginRight="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/d_huy"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ripple_btn"
            android:backgroundTint="#F4F6FC"
            android:fontFamily="@font/bold"
            android:paddingBottom="6dp"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="#374D6B"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noti"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="14dp"
        app:cardElevation="0dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/d_xoa"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#FF7373"
            android:background="@drawable/ripple_btn"
            android:fontFamily="@font/bold"
            android:paddingBottom="6dp"
            android:text="Xóa"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>