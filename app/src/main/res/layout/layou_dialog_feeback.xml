<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bộ Lọc"
        android:textSize="30dp"
        android:fontFamily="@font/bold"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textColor="#3E5370"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <Spinner
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_thongtin"
            android:id="@+id/spinnernganh"

            />
    <Spinner
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_thongtin"
        android:id="@+id/spinnerlop"
        /></LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="160dp"
        >
        <Button
            android:id="@+id/buton_huy"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Hủy"
            android:fontFamily="@font/bold"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:background="@drawable/shape_buton_huy"/>
        <Button
            android:id="@+id/butonLoc"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Lọc"
            android:fontFamily="@font/bold"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_buton_luu"/>

    </LinearLayout>

</LinearLayout>