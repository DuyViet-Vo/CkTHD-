<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">
    <ImageButton
        android:id="@+id/imgbtnquanli"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:padding="6dp"
        android:src="@drawable/ic_heroicons_solid_menu_alt_2" />

    <ImageButton
        android:id="@+id/searchBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:padding="6dp"
        android:src="@drawable/ic_akar_icons_search" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tieude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/bold"
                android:text="QL Sinh Viên"
                android:textColor="@color/c_374D6B"
                android:textSize="32dp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_khoa"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_below="@+id/tieude"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/txtlop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="264dp"
                android:layout_below="@id/list_khoa"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="34dp"
                android:fontFamily="@font/bold"
                android:text=""
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#90374D6B"
                android:textSize="20dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50pt"
                app:cardElevation="0dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="22dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/list_khoa">
                <ImageButton
                    android:id="@+id/button_loc"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ripple_btn"
                    android:backgroundTint="@color/white"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_carbon_settings_adjust" />
            </androidx.cardview.widget.CardView>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/sv_load"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/txtlop"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:src="@drawable/duaaaringgg" />

            <TextView
                android:id="@+id/sv_0"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_below="@id/sv_load"
                android:text="Không có sinh viên nào!"
                android:textSize="20sp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/semibold"
                android:textColor="@color/c_374D6B"
                android:layout_centerHorizontal="true"/>

            <ListView
                android:id="@+id/lvsinhvien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtlop"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:divider="@null"
                android:dividerHeight="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fAddBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FF77A7"
                android:padding="40dp"
                android:src="@drawable/ic_fluent_add_12_filled"
                app:borderWidth="0dp"
                app:fabCustomSize="68dp"
                app:tint="@color/white" />
        </RelativeLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_notification"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="8dp"
        android:layout_margin="12dp"
        app:cardElevation="6dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:textColor="@color/white"
            android:background="@drawable/ripple_btn"
            android:backgroundTint="#6CD06A"
            android:text="thành công!"
            android:padding="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textAllCaps="false"
            />
    </androidx.cardview.widget.CardView>
</RelativeLayout>