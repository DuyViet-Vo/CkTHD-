<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_loc_dialog"
    android:orientation="vertical"
    android:paddingVertical="34dp"
    android:layout_marginHorizontal="20dp"
    android:paddingHorizontal="30dp">
    <TextView
        android:id="@+id/tieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="Thêm mới"
        android:textColor="@color/c_374D6B"
        android:textSize="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="Khoa"
            android:textColor="#703E5370"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/spinnerkhoa"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_spinner"
            android:dropDownWidth="340dp"
            android:paddingHorizontal="4dp"
            android:textColorHint="#403E5370" />
        <TextView
            android:id="@+id/valid_khoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textColor="#FF7373"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="Tên ngành"
            android:textColor="#703E5370"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/them_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_thongtin"
            android:fontFamily="@font/bold"
            android:hint="Tên ngành mới"
            android:paddingHorizontal="20dp"
            android:textColor="@color/c_374D6B"
            android:textColorHint="#403E5370"
            android:maxLength="13"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/valid_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textColor="#FF7373"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgotPassword"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:layout_marginRight="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHuy"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#F4F6FC"
                android:background="@drawable/ripple_btn"
                android:fontFamily="@font/bold"
                android:paddingBottom="6dp"
                android:text="Hủy"
                android:textAllCaps="false"
                android:textColor="#374D6B"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgotPassword"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnThem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ripple_btn"
                android:backgroundTint="#FF77A7"
                android:fontFamily="@font/bold"
                android:paddingBottom="6dp"
                android:paddingHorizontal="12dp"
                android:text="Thêm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>