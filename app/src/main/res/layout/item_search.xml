<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/item_sv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints"
    android:clickable="true"
    android:background="@drawable/ripple_btn"
    android:paddingHorizontal="24dp"
    android:paddingVertical="14dp">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/avt_gifLoad"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/duaaaringgg"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cornerImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="50pt"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        app:cardElevation="0dp"
        >
        <ImageView
            android:id="@+id/avt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>


   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_toEndOf="@+id/cornerImg"
       android:layout_marginStart="17dp"
       android:layout_centerVertical="true">
       <TextView
           android:id="@+id/txtten"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="@font/bold"
           android:text="Đặng Văn Thiện"
           android:layout_marginTop="-3dp"
           android:textColor="#3E5370"
           android:textSize="18dp"/>

       <TextView
           android:id="@+id/txtmasv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="@font/semibold"
           android:text="1911505310261"
           android:textColor="#A1B5D8"
           android:textSize="15dp"
                  />
       <TextView
           android:id="@+id/txtlopNganh"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="@font/semibold"
           android:maxLines="1"
           android:ellipsize="end"
           android:text="Lớp 19T2 - Ngành Công nghệ thông tin"
           android:textColor="#A1B5D8"
           android:textSize="15dp"
           />
   </LinearLayout>

</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>